@page "/vehicules"
@inject NavigationManager NavigationManager

<PageTitle>Véhicule</PageTitle>

<div class="container">
    <div class="row">
        <div class="col">
            <!-- Texte "Véhicules en retard d'entretien" -->
            <div class="mt-3 d-flex justify-content-between align-items-center">
                <h2 class="mb-0">Véhicules</h2>
                <button class="btn btn-primary" @onclick="AjouterVehicule">+</button>

            </div>
            <!-- Tableau -->
            <div class="mt-3">
                <table class="table table-striped table-bordered table-hover">
                    <thead class="thead-dark">
                    <tr>
                        <th>Marque</th>
                        <th>Modèle</th>
                        <th>Immatriculation</th>
                        <th>Actions</th>
                    </tr>
                    <tr>
                        @foreach (var vehicle in vehicleList)
                        {
                                <th>@vehicle.ModelID</th>
                                <th>@vehicle.ModelModel</th>
                                <th>@vehicle.Matriculation</th>
                                <th>@Maintenance.WorksPerformed</th>
                        }

                    </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


